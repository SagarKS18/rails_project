<p id="notice"><%= notice %></p>

<% if session[:admin] %>
<h1>Stores</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Brand</th>
      <th>Size</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.color %></td>
        <td><%= store.brand %></td>
        <td><%= store.size %></td>
        <td><%= store.description %></td>
        <td><%= store.price %></td>
        <td><%= image_tag store.store_image, height: "100", width: "100" %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path, class: 'btn btn-success' %>

<% else %>
  <h1>You are not logged In! Please Login</h1>
  <%= link_to 'Login', admin_login_path, class: 'btn btn-success'%>
<% end %>
